{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitThis": true,
		"sourceMap": true,
		"outDir": "dist"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
