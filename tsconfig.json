{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"allowJs": true,
		"checkJs": false,
		"noImplicitThis": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"removeComments": true,
		"pretty": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.js"],
	"exclude": ["node_modules"]
}
