{
	"compilerOptions": {
		"target": "es6",
		"module": "esnext",
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"noImplicitThis": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"removeComments": true,
		"pretty": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue",
		"pm2.config.ts"
	],
	"exclude": ["node_modules"]
}
