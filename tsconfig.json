{
	"compilerOptions": {
		"target": "es6",
		"module": "esnext",
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"jsx": "preserve",
		"noImplicitThis": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"removeComments": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"pretty": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.vue"],
	"exclude": ["node_modules"]
}
