{
	"apps": [{
		"name": "robinhood.tools",
		"script": "dist/server/main.js",
		// "script": "src/server/main.ts",
		"args": ["--color"],
		"node_args": [
			"--max_old_space_size=512"
			// "--inspect",
		],
		// 
		"exec_mode": "cluster",
		"instances": "max",
		// 
		"source_map_support": true,
		"wait_ready": false,
		"kill_timeout": 3000,
		"automation": false,
		"pmx": false,
		"vizion": false,
		// 
		"watch": "/dev/null",
		"autorestart": false,
		"max_memory_restart": "512M",
		"max_restarts": 3,
		"min_uptime": "3s",
		"restart_delay": 3000,
		"out_file": "/dev/null",
		"error_file": "/dev/null",
		// 
		"env": {
			"NODE_ENV": "development"
		},
		"env_production": {
			"NODE_ENV": "production"
		}
		// 
	}]
}
